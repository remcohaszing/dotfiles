#!/usr/bin/env bash
LOCAL="$1"
REMOTE="$2"
BASE="$3"
MERGED="$4"
GIT_ROOT="$(git rev-parse --show-toplevel)"

if [[ "$MERGED" == yarn.lock ]]; then
  yarn
elif [[ "$MERGED" == package-lock.json ]]; then
  npm install
else
  code --folder-uri "file://$GIT_ROOT" --new-window --wait --merge "$REMOTE" "$LOCAL" "$BASE" "$MERGED"
fi

exit 1
