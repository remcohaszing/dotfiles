[advice]
    skippedCherryPicks = false
[alias]
    default-branch = ! git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
    get-merged-branches = ! git branch --merged="$(git default-branch)" | grep -vP "\\\\s$(git default-branch)$" | grep -vP '^\\*'
    l = log --graph --decorate --pretty=format:'%C(auto)%G? %H %d%n%an <%ae> [%ai] (%ce)%n%n  %s%n%Creset'
    lb = log --graph --decorate --pretty=format:'%C(auto)%G? %H %d%n%an <%ae> [%ai]%n%n  %s%n%Creset' --branches
    pb = ! git get-merged-branches | xargs git branch -D
    summary = log --abbrev-commit --pretty=oneline --first-parent
    wd = diff --word-diff=color
    wip = commit --no-verify --message WIP
    x = clean -xdf -e /.vscode
[clone]
    recurse-submodules = true
[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
    status = auto
    ui = auto
[commit]
    cleanup = scissors
    gpgSign = true
[core]
    autocrlf = input
    editor = vim
    eol = lf
    whitespace = cr-at-eol,tab-in-indent,trailing-space
[credential]
    helper = cache
[delta]
    line-numbers = true
    hunk-header-style = file line-number
    hyperlinks = false
    relative-paths = true
[diff "image"]
    command = ~/.config/git/bin/imgdiff
[fetch]
    prune = true
    recurseSubmodules = true
[grep]
    lineNumber = true
[init]
    defaultBranch = main
[merge]
    defaultToUpstream = true
    tool = mergetool
[mergetool]
    keepBackup = false
[mergetool "mergetool"]
    cmd = mergetool $LOCAL $REMOTE $BASE $MERGED
[pager]
    branch = cat
    diff = delta
    grep = cat
    log = gitlogpipe | less -F
    show = delta
    stash = false
    tag = less -F
[pull]
    rebase = true
[push]
    default = current
    followTags = true
[rebase]
    abbreviateCommands = true
[tag]
    gpgSign = true
    sort = -version:refname
[user]
    email = remcohaszing@gmail.com
    name = Remco Haszing
